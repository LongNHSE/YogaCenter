        <servlet-class>com.mycompany.yogacenterproject.controller.TrainerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>com.mycompany.yogacenterproject.controller.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SystemController</servlet-name>
        <servlet-class>com.mycompany.yogacenterproject.controller.SystemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrainerScheduleController</servlet-name>
        <servlet-class>com.mycompany.yogacenterproject.controller.TrainerScheduleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>com.mycompany.yogacenterproject.controller.AttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OTPController</servlet-name>
        <url-pattern>/OTPController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileController</servlet-name>
        <url-pattern>/ProfileController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleController</servlet-name>
        <url-pattern>/ScheduleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassController</servlet-name>
        <url-pattern>/ClassController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
