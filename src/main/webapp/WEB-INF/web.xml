    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/AttendanceController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
           600
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Public/signin.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.mycompany.yogacenterproject.filter.Authentication</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
