        <servlet-class>com.mycompany.yogacenterproject.controller.ImageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClassUnassignedController</servlet-name>
        <servlet-class>com.mycompany.yogacenterproject.controller.ClassUnassignedController</servlet-class>
    </servlet>
    <servlet>
